generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  username     String   @unique
  phone        String?
  schoolNumber String?
  grade        Int?
  faculty      String?
  department   String?
  password     String
  role         Role     @default(STUDENT)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  internships  Internship[]
}

enum Role {
  STUDENT
  COORDINATOR
}

model Internship {
  id                      String   @id @default(uuid())
  userId                  String
  type                    InternshipType
  status                  InternshipStatus

  internshipFormUrl       String
  unemploymentFormUrl     String
  healthFormUrl           String

  internshipFormStatus    InternshipStatus @default(PENDING)
  unemploymentFormStatus  InternshipStatus @default(PENDING)
  healthFormStatus        InternshipStatus @default(PENDING)

  startDate               DateTime
  endDate                 DateTime

  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  user                    User     @relation(fields: [userId], references: [id])
}

enum InternshipType {
  VOLUNTARY
  COMPULSORY
}

enum InternshipStatus {
  PENDING
  APPROVED
  REJECTED
}
